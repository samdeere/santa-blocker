{
  "name": "Santa Blocer",
  "version": "0.1.0",
  "description": "Saves Christmas",
  "icons": {

  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "blocker.js",
        "vendor/jquery-3.1.1.min.js"
      ]
    }
  ],
   "permissions": [
    "activeTab",
    "storage"
  ], 
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Santa Blocker"
  },
  "manifest_version": 2,
  "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self';"
}